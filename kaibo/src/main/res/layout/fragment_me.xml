<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60000000"
    app:focusOutEnd="false"
    app:focusOutSideStart="false"
    app:layout_constraintLeft_toLeftOf="parent">

    <View
        android:id="@+id/layout_user_info"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_180"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_recyclerview_item"
        android:focusable="false"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_my_follow"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_my_follow"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_180"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/menu_item_bg"
        android:focusable="true"
        android:nextFocusLeft="@id/btn_my_follow"
        android:nextFocusDown="@id/btn_my_follow"
        android:text="我的关注"
        android:textColor="@color/black"
        app:focusOutEnd="false"
        app:focusOutSideStart="false"
        app:layout_constraintLeft_toRightOf="@id/layout_user_info"
        app:layout_constraintRight_toLeftOf="@+id/btn_history"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_history"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_180"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/menu_item_bg"
        android:focusable="true"
        android:nextFocusDown="@id/btn_history"
        android:text="历史记录"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/btn_my_follow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>
