<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_result_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    app:focusOutEnd="false"
    app:focusOutFront="false"
    app:focusOutSideStart="true"
    app:layout_constraintLeft_toLeftOf="parent">

    <TextView
        android:id="@+id/tv_search_result"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:padding="@dimen/dp_5"
        android:text="搜索结果"
        android:textColor="@color/color_ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.leanback.widget.VerticalGridView
        android:id="@+id/recycler_search_result"
        android:layout_width="@dimen/dp_469"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="@dimen/dp_20"
        app:focusOutSideStart="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_search_result"></androidx.leanback.widget.VerticalGridView>

</androidx.constraintlayout.widget.ConstraintLayout>
