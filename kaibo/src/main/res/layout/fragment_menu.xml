<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_root"
    android:focusable="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_item_bg"
        android:focusable="true"
        android:nextFocusDown="@id/btn_follow"
        android:nextFocusUp="@id/btn_me"
        android:text="推荐"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btn_follow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_item_bg"
        android:layout_marginTop="@dimen/dp_10"
        android:focusable="true"
        android:nextFocusDown="@id/btn_me"
        android:nextFocusUp="@id/btn_recommend"
        android:text="关注"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btn_me"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_recommend" />

    <Button
        android:id="@+id/btn_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_item_bg"
        android:layout_marginTop="@dimen/dp_10"
        android:focusable="true"
        android:nextFocusDown="@id/btn_recommend"
        android:text="我的"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_follow" />

</androidx.constraintlayout.widget.ConstraintLayout>